\newcommand{\mapofcontentsA}[1]{
\forcsvlist\highlightselected{#1}
 \begin{center}\vspace{-5mm}\begin{tikzpicture}[
	    small mindmap, 
	    concept color = contentscolor,
	    every node/.style = {concept}, 
	    grow cyclic,
	    rotate=90,
	    yscale=-1,xscale=-1
	]
	\node (root)[concept color=contentscolor!50,minimum size=1mm, inner sep=0] {Integration}
	    child [concept color=\aintro,text=_darkred, sibling angle=60] {node (1) {Introduction}
		    child [concept color=\aa, sibling angle=40] {node (11) {1.1\\ Definition}}
		    child [concept color=\ab, sibling angle=40] {node (12) {1.2\\ Properties}}
		    child [concept color=\ac, sibling angle=40] {node (13) {1.3\\ Fundamental Theorem}}
			}
	    child [concept color=\atech,text=_deepskyblue, sibling angle=40] {node (4) {Techniques}
	        child[concept color=\ad, sibling angle=45] {node (11) {1.4\\ Substitution}}
		child [concept color=\ag, sibling angle=45]{node (12) {1.7\\ Integration by Parts}}
	        child [concept color=\ah, sibling angle=45]{node (13) {1.8\\ Trigonometric Integrals}}        
	        child [concept color=\ai, sibling angle=45]{node (13) {1.9\\ Trigonometric Substitution}}
	        child [concept color=\aj, sibling angle=45]{node (13) {1.10\\ Partial Fractions}}
	         }
	    child [concept color=\aapp,text=black, sibling angle=110] {node (6) {First Applications}
	        child[concept color=\ae] {node (61) {1.5\\ Area Between Curves}}
	        child[concept color=\af, sibling angle = 30] {node (62) {1.6\\ Volumes}}
	    }
	    child [concept color=\atool,text=black, sibling angle=67] {node (5) {Further Tools}
	        child[concept color=\ak, sibling angle=70] {node (51) {1.11\\ Numerical Integration}}
	        child[concept color=\al, sibling angle=20] {node (52) {1.12\\ Improper Integrals}}
	    }
	    ;
	\end{tikzpicture}\end{center}
\forcsvlist\unhighlightselected{#1}
}

